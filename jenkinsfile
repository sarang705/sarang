ipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                url: 'git@github.com:sarang705/sarang.git'
            }
        }
        
        stage('Test') {
            steps {
                sh 'echo "Running HTML validation (placeholder for actual tests)"'
            }
        }
        
        stage('Deploy') {
            steps {
                sh '''
                sudo mkdir -p /var/www/html
                sudo cp -r * /var/www/html/
                '''
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
